{% extends 'base.html.twig' %}

{% block title %}Fiche Stagiaire{% endblock %}

{% block contenu %}
	<section class="uk-card uk-container uk-margin-large-top uk-margin-large-bottom">
		<h1 class="uk-card-title">Fiche stagiaire</h1>
		<h2>{{ stagiaire.prenom ~ ' ' ~ stagiaire.nom }}</h2>
		<div class="uk-column-1-2">
			<p>Sexe : {{ stagiaire.sexe }}</p>
			<p>Date de Naissance : {{ stagiaire.dateNaissance | date('d-m-Y') }}</p>
			<p>Mail : {{ stagiaire.mail }}</p>
			<p>Tél : {{ stagiaire.telephone }}</p>

			<h4>Sessions prévues:</h4>
			{% if stagiaire.sessions | length == 0 %}
				<p class="uk-label uk-label-warning">Ce stagiaire n'est inscrit dans aucune session.</p>
			{% else %}
				{% for session in stagiaire.sessions %}
					<p>
						<a href="{{ path('session_show', {id: session.id}) }}">{{ session.formation}} :</a>
						du 
						{{ session.dateD | date('d-m-Y') }}
						au 
						{{ session.dateF | date('d-m-Y') }}
					</p>
				{% endfor %}
			{% endif %}
			{% if is_granted("ROLE_ADMIN") %}
            <a class=" uk-button uk-button-primary " href="{{ path('stagiaire_add') }}">Ajouter {{ stagiaire.prenom ~ ' ' ~ stagiaire.nom }} à une session</a>
        	{% endif %}
		</div>
	</section>
{% endblock %}
