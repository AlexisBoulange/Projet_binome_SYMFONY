{% extends 'base.html.twig' %}

{% block title %}Fiche Stagiaire{% endblock %}

{% block contenu %}
	<section class="uk-card">
		<h4>Fiche stagiaire</h4>
		<h2 class="uk-card-title uk-margin-remove-top">{{ stagiaire.prenom ~ ' ' ~ stagiaire.nom }}</h2>
		<div class="uk-column-1-2">
			<p>Sexe:{{ stagiaire.sexe }}</p>
			<p>Date de Naissance:{{ stagiaire.dateNaissance | date('d-m-Y') }}</p>
			<p>Mail:{{ stagiaire.mail }}</p>
			<p>Tél:{{ stagiaire.telephone }}</p>

			<h4>Session prévues:</h4>
			{% if stagiaire.sessions | length == 0 %}
				<span class="uk-label">Ce stagiaire n'est inscrit dans aucune session.</span>
			{% else %}
				{% for sessions in stagiaire.sessions %}
					<p>
						<a href="{{ path('session_show', {id: session.id}) }}">{{ session.formation}}:</a>
						du
						{{ session.dateD | date('d-m-Y') }}
						au
						{{ session.dateF | date('d-m-Y') }}
					</p>
				{% endfor %}
			{% endif %}
		</div>
	</section>
{% endblock %}
