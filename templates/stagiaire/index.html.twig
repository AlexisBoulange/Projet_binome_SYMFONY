    <table class="uk-table uk-table-divider uk-table-responsive">
        <thead>
            <tr>
               <th>Nom/Pr√©nom</th>
               <th>Ville</th>
               <th>Mail</th>
               <th>Sessions</th>
               <th>modifier/supprimer</th>
            </tr>
