{% extends 'base.html.twig' %}

{% block title %}Supprimer une formation{% endblock %}


{% block contenu %}
	<section id="modal1"class="uk-background-top-left uk-background-cover uk-height-medium uk-panel uk-flex uk-flex-middle uk-flex-center"  uk-parallax="bgy: -200">
		<div class="uk-alert uk-background-default">
			<h2 class="uk-card-title uk-margin-top">
				êtes vous sûr(e) de vouloir supprimer
				{{ formation.nom }}?
			</h2>
			<div class="uk-card-title uk-margin-top">
			<a class="uk-button uk-button-primary" href="{{ path('formation_delete', {id: formation.id}) }}">OUI</a>
