{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block contenu %}
    <h2>Formations</h2>
    <table class="uk-table uk-table-divider uk-table-responsive">
        <thead>
            <tr>
               <th>Intitul√©</th>
               <th>Descriptif</th>
               <th>Sessions disponibles</th>   
            </tr>
        </thead>
            {% for formation in formations %}
               <tr> 
                  <td><strong>{{ formation.nom }}</strong></td>
                  <td>{{ formation.descriptif }}</td>
                  <td><a href="{{ path('session_index', {id: formation.id}) }}">{{ formation.sessions | length }}</a></td>
                  {% if is_granted("ROLE_ADMIN") %}
                        <td>
                            <a class="uk-button-small uk-button-primary" href="{{ path('formation_edit', {id: formation.id}) }}" uk-icon="icon: file-edit" title="Modifier"></a>
                            <a class="uk-button-small uk-button-danger" href="{{ path('formation_delete', {id: formation.id}) }}" uk-icon="icon: trash" title="Supprimer"></a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        <tbody>
    </table>
    {% if is_granted("ROLE_ADMIN") %}
        <a class=" uk-button uk-button-primary " href="{{ path('formation_add') }}"> + Ajouter </a>
    {% endif %}
{% endblock %}

