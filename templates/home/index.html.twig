{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}
{% block contenu %}
<div class="uk-background-top-left uk-background-cover uk-height-medium uk-panel uk-flex uk-flex-middle uk-flex-center" style="background-image: url(/img/home_background.jpg); height: 100vh;" uk-parallax="bgy: -200">
    
    <div>
    {% if is_granted("ROLE_USER") %}
        <h2 class="uk-heading-large" style="color: #fafafa" >Hello {{ app.user.pseudo }}!</h2>
    {% else %}
        <h1 class="uk-heading-large" style="color: #fafafa" >Bienvenue!</h2>
        <p class="uk-heading-small uk-text-center" style="color: #fafafa; font-size: 38px;">Connectez-vous</p>

    </div>
    {% endif %}
    </div>
</div>
{% endblock %}
